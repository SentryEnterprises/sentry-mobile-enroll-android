<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/ButtonBack"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="@string/receive_title"
            android:textAppearance="@style/Text_B2_Regular"
            android:textColor="@color/color_on_background_high"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/rlQrCodeContainer"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:background="@drawable/bg_qr_code"
            app:layout_constraintBottom_toTopOf="@id/tvAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/ivQr"
                android:layout_width="154dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="@drawable/ic_qr_code_sample"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textAppearance="@style/Text_Caption"
            android:textColor="@color/color_on_surface_medium"
            app:layout_constraintBottom_toTopOf="@id/actionsContainer"
            app:layout_constraintEnd_toEndOf="@id/rlQrCodeContainer"
            app:layout_constraintStart_toStartOf="@id/rlQrCodeContainer"
            app:layout_constraintTop_toBottomOf="@+id/rlQrCodeContainer"
            tools:text="bc1qu0dajp5kfqpavw9acnzsn6u0upw99tnrqnu5e3" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/actionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddress">

            <TextView
                android:id="@+id/btnCopy"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:text="@string/receive_details_action_copy"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_background_high"
                app:drawableTopCompat="@drawable/ic_action_copy" />

            <TextView
                android:id="@+id/btnShare"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:text="@string/receive_details_action_share"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_background_high"
                app:drawableTopCompat="@drawable/ic_action_share" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/ivBottomOrnament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_ornament_receive_details_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivTopOrnament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ornament_receive_details_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>