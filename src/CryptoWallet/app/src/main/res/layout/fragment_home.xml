<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background">

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_manage_accounts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_sentinel_logo_home"
            app:layout_constraintBottom_toBottomOf="@id/btnSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnSettings"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnScanQR"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_qr_code_scanner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/balance"
            android:layout_width="317dp"
            android:layout_height="126dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/img_balance_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSettings">

            <TextView
                android:id="@+id/tvWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_primary_balance"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="@string/primary_wallet"
                android:textAppearance="@style/Text_Caption"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:textAppearance="@style/Text_H1_Regular"
                android:textColor="@color/white"
                tools:text="$17,958.56" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/balance"
            app:layout_constraintEnd_toEndOf="@id/balance"
            app:layout_constraintStart_toStartOf="@id/balance"
            app:layout_constraintTop_toTopOf="@id/balance"
            tools:visibility="visible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/actionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balance">

            <TextView
                android:id="@+id/btnReceive"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:text="@string/more_actions_receive"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_background_high"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_action_receive" />

            <TextView
                android:id="@+id/btnSend"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:text="@string/more_actions_send"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_background_high"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_action_send" />

            <TextView
                android:id="@+id/btnMore"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:text="@string/more_actions"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_background_high"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_action_more" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_home_tabs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionsContainer"
            app:tabIndicatorHeight="0.5dp"
            app:tabTextAppearance="@style/TabsTextAppearance">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tokens" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity" />

        </com.google.android.material.tabs.TabLayout>

        <RelativeLayout
            android:id="@+id/tokensViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_surface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMyTokens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_surface"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_token" />

            <ProgressBar
                android:id="@+id/progressTokens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activityViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_surface"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout">

            <ImageView
                android:id="@+id/ivNoActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_no_activity"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvNoActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivNoActivity"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/home_no_activity"
                android:textAppearance="@style/Text_B2_Regular"
                android:textColor="@color/color_on_surface_medium"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMyTransactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/color_surface"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_transaction" />

            <ProgressBar
                android:id="@+id/progressTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                tools:visibility="gone" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>