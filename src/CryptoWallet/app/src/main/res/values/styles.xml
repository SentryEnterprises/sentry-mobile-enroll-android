<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CryptoWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_text_button_blue</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface_high</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnBackground">@color/color_on_background_high</item>
        <item name="android:colorBackground">@color/color_background</item>

        <item name="colorAccent">@color/color_primary</item>

        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:windowSplashScreenBackground">@color/neutral_90</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <!--  TextAppearance  -->
    <style name="Text_H1_Bold">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text_H1_Regular">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_H2_Bold">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text_H2_Regular">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_B1_Semibold">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text_B1_Regular">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_B2_Semibold">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text_B2_Regular">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_B3_Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text_B3_Regular">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_Button">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text_GhostButton">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text_Label">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text_Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  Buttons  -->
    <style name="Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBlue" parent="Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textAppearance">@style/Text_Label</item>
        <item name="android:textColor">@color/color_text_button_blue</item>
    </style>

    <style name="ButtonGhost" parent="Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/Text_Label</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="ButtonOutlined" parent="Button">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textAppearance">@style/Text_Label</item>
        <item name="android:textColor">@color/color_text_button_outlined</item>
    </style>

    <style name="ButtonBack">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="PinDotStyle">
        <item name="android:layout_width">@dimen/pin_dot_size</item>
        <item name="android:layout_height">@dimen/pin_dot_size</item>
        <item name="android:layout_margin">@dimen/pin_dot_margin</item>
        <item name="android:background">@drawable/bg_pin_dot</item>
    </style>

    <!--  Pin View  -->
    <attr name="pin_dot_filled_background" format="reference" />
    <attr name="pin_dot_error_background" format="reference" />
    <attr name="create_new_wallet_background" format="reference" />
    <attr name="recover_wallet_background" format="reference" />
    <attr name="deny_wallet_link_button" format="reference" />
    <attr name="approve_wallet_link_button" format="reference" />

    <!--  Bottom Sheet Dialog  -->
    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
